{
	"compilerOptions": {
		"target": "ES5",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"noImplicitAny": false,
		"declaration": true,
		"rootDir": "./src",
		"typeRoots": [
			"node_modules/@types"
		],
		"types": [
			"core-js",
			"node",
			"jasmine"
		]
	},
	"exclude": [
		"bower",
		"node_modules"
	]
}
